<% include header %>

<div class="container">
	<div class="write_container">
		<div class="write_title">
			<input type="text" class="write_title_in" placeholder="标题" value="<%=article.title%>">
		</div>
		<div class="write_tool">
			<ul>
				<!-- <li>
					插入图片
				</li>
				<li>
					插入链接
				</li> -->
				<li class="preview_btn" data-state="0">
					预览
				</li>
				<li class="cat_select">
					栏目
				</li>
				<li class="art_state">
					状态
				</li>
			</ul>
			<div class="clear"></div>
		</div>
		<div class="write_cat">
			<div class="write_cat_select">
				<ul>
					<li class="" data-bigcat="前端">JAVASCRIPT</li>
					<li class="" data-bigcat="前端">HTML</li>
					<li class="" data-bigcat="前端">CSS</li>
					<li class="" data-bigcat="后台">PHP</li>
					<li class="" data-bigcat="后台">MYSQL</li>
					<li class="" data-bigcat="后台">SERVER</li>
					<li class="" data-bigcat="万华镜">LIVE</li>
					<li class="" data-bigcat="万华镜">about</li>
				</ul>
				<div class="clear"></div>
			</div>
		</div>
		<div class="write_state">
			<div class="write_state_select">
				<ul>
					<% if(article.state == "0") {%>
						<li class="select" data-state="0">发布</li>
					<% } else { %>
						<li class="" data-state="0">发布</li>
					<% } %>
					<% if(article.state == "1") {%>
						<li class="select" data-state="1">草稿</li>
					<% } else { %>
						<li class="" data-state="1">草稿</li>
					<% } %>
					<% if(article.state == "2") {%>
						<li class="select" data-state="2">隐私</li>
					<% } else { %>
						<li class="" data-state="2">隐私</li>
					<% } %>
				</ul>
			</div>
		</div>
		<div class="write_content">
			<form class="codemirror-form">
				<textarea class="write_text" id="write_text" placeholder="内容"><%=article.content%></textarea>
			</form>
			<span class="write_wordsnum">0</span>
			<div class="clear"></div>
			<div class="show_preview">
				
			</div>
		</div>

		<div class="write_tags">
			<input type="text" class="tags_input" placeholder="tags">
			<div class="show_tags">
				<% article.tags.forEach(function(tag,index){ %>
					<a href="javascript:void(0)" class="nowtags"><%=tag%></a>
				<%	}) %>
			</div>
			<div class="clear"></div>
		</div>
		<div class="write_input">
			<a href="#" class="write_save">save</a><span class="write_msg"></span>
		</div>
	</div>
</div>
<script type="text/javascript" src="/highlight/lib/codemirror.js"></script>
<script type="text/javascript" src="/highlight/mode/markdown/markdown.js"></script>
<script type="text/javascript" src="/highlight/addon/selection/active-line.js"></script>
<script type="text/javascript" src="/highlight/addon/edit/matchbrackets.js"></script>
<script type="text/javascript" src="/highlight/addon/mode/loadmode.js"></script>
<script type="text/javascript" src="/javascripts/lib/marked.js"></script>
<link rel="stylesheet" type="text/css" href="/highlight/lib/codemirror.css">
<link rel="stylesheet" type="text/css" href="/stylesheets/highlighttheme.min.css">
<link rel="stylesheet" type="text/css" href="/stylesheets/edit.css">
<script type="text/javascript" src="/javascripts/business/write/write.js"></script>

<% include footer %>